{
  "name": "cycore-eda-desktop",
  "version": "1.1.0",
  "private": true,
  "description": "CyCore EDA 桌面版",
  "main": "main.js",
  "author": "CyCore",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.cycore.eda",
    "productName": "CyCore EDA",
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../site",
        "to": "site",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/icons/png",
        "to": "icons",
        "filter": [
          "**/*.png"
        ]
      },
      {
        "from": "../war/img",
        "to": "site/img",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../src/com/lushprojects/circuitjs1/public",
        "to": "site/circuitjs1",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools",
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "zip", "arch": ["x64"] }
      ],
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ],
      "category": "Development",
      "icon": "build/icons/png"
    }
  }
} 